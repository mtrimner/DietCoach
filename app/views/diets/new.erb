<div class="container">
  <% if @diet.errors.any? %>
  <div class="alert alert-dismissible alert-warning">
    <h4 class="alert-heading">Warning!</h4>
    <p class="error"><%= @diet.errors.full_messages.to_sentence %></p>
  </div>
  <% end %>
  <div class="d-flex align-items-center flex-column">
    <%= bootstrap_form_with model: [@user, @diet], method: 'post', local: true do |f| %>
    <%= render 'form', f: f %>
  <% end %>
</div>