<h1>This is a test</h1>

<% if @diet.errors.any? %>
        <h5 class="error"><%= @diet.errors.full_messages.to_sentence %></h5>
<% end %>

    <%= form_with model: [@user, @diet], method: 'post', local: true do |f| %>
  <div class="field"> 
    <%= f.label :goal, "I want to lose weight." %>
    <%= f.radio_button(:goal, "lose") %>
    <%= f.label :goal, "I want to maintain weight." %>
    <%= f.radio_button(:goal, "maintain") %>
    <%= f.label :goal, "I want to build muscle." %>
    <%= f.radio_button(:goal, "build") %>
  </div>
  <br>
    <%= f.label :current_weight, "Current Weight" %>
    <%= f.number_field :current_weight %> <br>
    <br>
    <%= f.label :target_weight, "Target Weight" %>
    <%= f.number_field :target_weight %> <br>
   <br> 
    <div class="field"> 
    <%= f.label :activity_level, "sedentary(desk worker with little to no exercise)" %>
    <%= f.radio_button(:activity_level, 1) %>
    <%= f.label :activity_level, "lightly active(sales person/light exercise 1-3 days/week)" %>
    <%= f.radio_button(:activity_level, 2) %>
    <%= f.label :activity_level, "moderately active(teacher/moderate exercise 3-5 days/week)" %>
    <%= f.radio_button(:activity_level, 3) %>
    <%= f.label :activity_level, "very active(nurse/moderate exercise 5-7 days/week)" %>
    <%= f.radio_button(:activity_level, 4) %>
    <%= f.label :activity_level, "extremely active(construction worker/very hard exercise)" %>
    <%= f.radio_button(:activity_level, 5) %>
  </div>
  <br>
<br>
  <div class="field">
    <%= f.label :start_date %><br />
    <%= f.date_select :start_date %>
  </div>

  <div class="field">
    <%= f.label :end_date %><br />
    <%= f.date_select :end_date %>
  </div>

  <%= f.hidden_field :user_id %>

  <div class="actions">
    <%= f.submit "Submit" %>
  </div>

<% end %>