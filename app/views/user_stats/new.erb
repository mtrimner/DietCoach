<%= form_with model: [@user, @user_stats], local: true do |f| %>

<div class="field"> 
    <%= f.label :sex, "Male" %>
    <%= f.radio_button(:sex, "Male") %><br>
    <%= f.label :sex, "Female" %>
    <%= f.radio_button(:sex, "Female") %>
  </div>
  
  <div class="field"> 
    <%= f.select :height_inches, options_for_select([["4\' 10\"" , 58], ["4\' 11\"", 59], ["5\' 0\"", 60], ["5\' 1\"", 61], ["5\' 2\"", 62], ["5\' 3\"", 63], ["5\' 4\"", 64], ["5\' 5\"", 65], ["5\' 6\"", 66], ["5\' 7\"", 67], ["5\' 8\"", 68], ["5\' 9\"", 69], ["5\' 10\"", 70], ["5\' 11\"", 71], ["6\' 0\"", 72], ["6\' 1\"", 73], ["6\' 2\"", 74],]) %>
    </div>

    <div class="field">
    <%= f.label :birthday %><br />
    <%= f.date_select :birthday %>
  </div>

  <%= f.hidden_field :user_id %>
  <div class="actions">
    <%= f.submit "Submit" %>
  </div>

  <% end %>

